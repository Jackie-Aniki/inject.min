{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": false,
    "skipLibCheck": false
  },
  "include": ["src"],
  "exclude": ["dist", "src/*.spec.*"]
}
